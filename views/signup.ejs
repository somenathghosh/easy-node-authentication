<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ 
		background-color: #090448;
		padding-top:80px; }
	</style>
	
	<script>
		function validateForm()
		{
		var x=document.forms["myForm"]["email"].value;
		var p=document.forms["myForm"]["password"].value;
		if(x<99999){
			alert("Enter a valid Employee ID");
			return false;
		}
		if(p==""){
			alert("Password Can not be empty");
			return false;
			
		}
		
		}
</script>
	
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">

	<h1><font color="white"><span class="fa fa-sign-in"></span> Signup</font></h1>

	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form name ="myForm" action="/signup" onsubmit="return validateForm(this);" method="post">
		
		
		<div class="form-group">
			<label><font color="white"> TCS Emp ID(User ID)</font> </label>
			<input type="Number" id="email" class="form-control" name="email" required>
		</div>
		
		
		<div class="form-group">
			<label><font color="white">Password</font></label>
			<input type="password" class="form-control" name="password">
		</div>

		<button type="submit" class="btn btn-warning btn-lg"><font color="white">Signup</font></button>
	</form>

	<hr>

	<p><font color="white">Already have an account? </font><a href="/login"><font color="yellow">Login</font></a></p>
	<p><font color="white">Or go </font><a href="/"><font color="Orange">home</font></a>.</p>

	

</div>
</div>
</body>
</html>