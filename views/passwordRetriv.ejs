<!doctype html>
<html>
<head>
	<title>Password Retrieval</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Your Password</h1>
		<a href="/login" class="btn btn-default btn-sm">Login</a>
	</div>
	
	

		<!-- LOCAL INFORMATION -->
		
			<div class="well">
				<center>
				<h3><span class="fa fa-user"></span> User</h3>
				</center>

				<% if (Users.local.email) { %>
					<p>
						<center>
						<strong>User ID</strong>: <%= Users.local.email %>&nbsp;&nbsp;&nbsp
						<strong>password</strong>: <%= Users.local.password %>
						</center>
					</p>
					
				
				
				<% } %>

			</div>
		

		
	
	

	

</div>
</body>
</html>